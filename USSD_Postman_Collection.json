  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "session_id",
      "value": "test-session-{{$timestamp}}",
      "type": "string"
    },
    {
      "key": "mobile_number",
      "value": "0241234567",
      "type": "string"
    },
    {
      "key": "service_code",
      "value": "123",
