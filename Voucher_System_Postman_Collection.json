{
  "info": {
    "name": "Voucher System API",
    "description": "Complete collection for testing the voucher system endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Import Vouchers from Excel",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "file",
              "type": "file",
              "src": []
            }
          ]
        },
        "url": {
          "raw": "{{base_url}}/vouchers/import/excel",
          "host": ["{{base_url}}"],
          "path": ["vouchers", "import", "excel"]
        },
        "description": "Upload Excel file with voucher codes in the first column"
      }
    },
    {
      "name": "Import Vouchers from Array",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"voucher_codes\": [\n    \"AIDIOEIOS-001\",\n    \"AIDIOEIOS-002\",\n    \"AIDIOEIOS-003\"\n  ]\n}"
        },
        "url": {
          "raw": "{{base_url}}/vouchers/import/array",
          "host": ["{{base_url}}"],
          "path": ["vouchers", "import", "array"]
        },
        "description": "Import vouchers as JSON array"
      }
    },
    {
      "name": "Assign Voucher",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"voucher_code\": \"AIDIOEIOS-001\",\n  \"mobile_number\": \"233244123456\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/vouchers/assign",
          "host": ["{{base_url}}"],
          "path": ["vouchers", "assign"]
        },
        "description": "Assign a specific voucher to a mobile number"
      }
    },
    {
      "name": "Purchase Vouchers for Self",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"mobile_number\": \"233244123456\",\n  \"name\": \"John Doe\",\n  \"quantity\": 2,\n  \"flow\": \"self\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/vouchers/purchase",
          "host": ["{{base_url}}"],
          "path": ["vouchers", "purchase"]
        },
        "description": "Purchase vouchers for yourself"
      }
    },
    {
      "name": "Purchase Vouchers for Others",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"mobile_number\": \"233244123456\",\n  \"name\": \"John Doe\",\n  \"quantity\": 2,\n  \"flow\": \"other\",\n  \"bought_for_mobile\": \"233244789012\",\n  \"bought_for_name\": \"Jane Smith\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/vouchers/purchase",
          "host": ["{{base_url}}"],
          "path": ["vouchers", "purchase"]
        },
        "description": "Purchase vouchers for someone else"
      }
    },
    {
      "name": "Get Available Vouchers",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/vouchers/available",
          "host": ["{{base_url}}"],
          "path": ["vouchers", "available"]
        },
        "description": "Get count and list of available vouchers"
      }
    },
    {
      "name": "Get Assigned Vouchers",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/vouchers/assigned/233244123456",
          "host": ["{{base_url}}"],
          "path": ["vouchers", "assigned", "233244123456"]
        },
        "description": "Get vouchers assigned to a specific mobile number"
      }
    },
    {
      "name": "Use Voucher",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{base_url}}/vouchers/use/AIDIOEIOS-001",
          "host": ["{{base_url}}"],
          "path": ["vouchers", "use", "AIDIOEIOS-001"]
        },
        "description": "Mark a voucher as used"
      }
    },
    {
      "name": "Get Voucher Statistics",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/vouchers/stats",
          "host": ["{{base_url}}"],
          "path": ["vouchers", "stats"]
        },
        "description": "Get total, available, assigned, and used voucher counts"
      }
    },
    {
      "name": "Search Voucher by Code",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/vouchers/search?code=AIDIOEIOS-001",
          "host": ["{{base_url}}"],
          "path": ["vouchers", "search"],
          "query": [
            {
              "key": "code",
              "value": "AIDIOEIOS-001"
            }
          ]
        },
        "description": "Search for a specific voucher by code"
      }
    },
    {
      "name": "Search Vouchers by Mobile",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/vouchers/search?mobile=233244123456",
          "host": ["{{base_url}}"],
          "path": ["vouchers", "search"],
          "query": [
            {
              "key": "mobile",
              "value": "233244123456"
            }
          ]
        },
        "description": "Search for vouchers assigned to a specific mobile number"
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    }
  ]
}
