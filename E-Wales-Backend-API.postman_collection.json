              "raw": "{\n  \"reference\": \"ECG_12345\",\n  \"status\": \"Success\",\n  \"meterNumber\": \"12345678901\",\n  \"amount\": 20.00,\n  \"token\": \"1234-5678-9012-3456\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/utility/callback",
