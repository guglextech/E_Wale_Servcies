      ]
    },
    {
      "name": "USSD Services",
      "item": [
        {
          "name": "USSD Request",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"sessionId\": \"session_{{$randomUUID}}\",\n  \"serviceCode\": \"*123#\",\n  \"phoneNumber\": \"0241234567\",\n  \"text\": \"\",\n  \"networkCode\": \"62002\"\n}"
